{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "moduleDetection": "force",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@routes/*": ["routes/*"],
      "@controllers/*": ["controllers/*"],
      "@services/*": ["services/*"],
      "@schemas/*": ["schemas/*"],
      "@middlewares/*": ["middlewares/*"],
      "@plugins/*": ["plugins/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["src"]
}
